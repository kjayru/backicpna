@import 'nib'

body,html
	margin 0
	padding 0
	width 100%
	height 100%
	font-smoothing antialized
	font-size 14px
	line-height 1.2
	font-family 'Lato', sans-serif
	background #eee
	color #222
	font-weight 400

h1,h2,h3,h4,h5,h6,ul,ol,li,p,strong,form
	margin 0
	padding 0
	font-weight 300
input,textarea,select,option,button
	padding 0
	margin 0
	border 0
	font-family 'Lato', sans-serif
	outline none
ul, li
	list-style none
a
	text-decoration none
	outline none
img
	display block
	border 0
*
	box-sizing border-box

/* -- Clases Generales -- */
.all
	width 100%
	position relative
.limit
	width 100%
	max-width 1200px
	padding 0 15px
	margin auto
	
.clear
	clear both
.left
	float left
.right
	float right

/* -- Sitio Web -- */

//// Login.

.login
	width 90%
	max-width 400px
	position absolute
	top 50%
	left 50%
	transform translate(-50%,-50%)
	box-shadow 0 0 15px rgba(0,0,0,.15)
	padding 15px
	border-radius 10px
	background #fff
	text-align center
.login__logo
	margin 0 auto 25px
.login__input
	display block
	width 100%
	background none
	height 34px
	line-height 34px
	padding 0 10px
	border-bottom 1px solid #ddd
	margin-bottom 20px
	font-size 16px
	color #666
.login__boton
	background rgb(0, 133, 186)
	padding 10px 15px
	color #fff
	font-size 14px
	text-align center
	display inline-block
	border-bottom 2px solid #02658c
	border-radius 5px
	transition background ease .25s
	&:hover
		background #039bd8
.login__msg
	margin-top 10px
	color red
	display none
	&.act
		display block
	
////// Login Fin.

//// CMS

.cms__bg
	background #fff
	box-shadow 0 0 10px rgba(0,0,0,.10)
	padding 10px 15px
	margin-bottom 15px

.cms__logo
	margin auto
.cms__nav
	display block
	padding 40px 0 10px
.cms__nav__enlace
	color #666
	margin-right 20px
	display inline-block
	position relative
	float left
	text-transform uppercase
	font-size 13px
	font-weight 700
	&:after
		content ''
		width 100%
		height 2px
		position absolute
		bottom -5px
		left 0
		background #039bd8
		opacity 0
		transition opacity ease .25s
	&:hover, &.act
		color #039bd8
		&:after
			opacity 1
table
	width 100%
	border 1px solid #bbb
	color #666
	tr, td
		border 1px solid #bbb
	td
		padding 10px
.table__titulo
	text-transform uppercase
	font-weight 700
.cms__botones
	padding 10px 0 20px
.cms__nav__enlace--numero
.cms__nav__enlace--download
	text-transform uppercase
	font-weight 700
	color #039bd8
.cms__nav__enlace--numero
	color #000
	&:after
		display none
	
.cms__nav__enlace--download
	margin-right 0
	float right
.cms__nav__enlace--salir
	margin-right 0
	color red
	float right
	font-weight 700
	&:after
		background red
	&:hover
		color red
///// CMS Fin.
